{
  "builders": [
    {
      "name": "client",
      "type": "googlecompute",
      "zone": "us-central1-a",
      "source_image": "ubuntu-1604-xenial-v20160610",
      "project_id": "{{user `googlecompute_project_id`}}",
      "account_file": "{{user `config_path`}}/account.json",
      "ssh_username": "ubuntu",
      "image_name": "nebula-ubuntu-client-{{timestamp}}",
      "image_description": "Client instance image."
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/files",
      "destination": "/tmp/provision"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/client.bash"
      ]
    }
  ]
}
