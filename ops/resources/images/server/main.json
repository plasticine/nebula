{
  "variables": {
    "node_image_name": ""
  },
  "builders": [
    {
      "name": "server",
      "type": "googlecompute",
      "zone": "us-central1-a",
      "source_image": "{{user `node_image_name`}}",
      "project_id": "{{user `googlecompute_project_id`}}",
      "account_file": "{{user `config_path`}}/account.json",
      "ssh_username": "ubuntu",
      "image_name": "nebula-server-{{timestamp}}",
      "image_description": "Server instance image."
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/files",
      "destination": "/tmp/provision"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/copy-files.bash",
        "{{template_dir}}/scripts/consul.bash"
        "{{template_dir}}/scripts/nomad.bash"
      ]
    }
  ]
}
