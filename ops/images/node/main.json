{
  "variables": {
    "packer-ap-southeast-2-base": ""
  },
  "builders": [
    {
      "name": "node",
      "type": "amazon-ebs",
      "region": "ap-southeast-2",
      "source_ami": "{{user `packer-ap-southeast-2-base`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "ap-southeast-2-ubuntu-node-{{isotime | clean_ami_name}}",
      "ami_description": "NAT image."
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/../consul/scripts/install.bash",
        "{{template_dir}}/../nomad/scripts/install.bash"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "tfvars",
      "output": "{{template_dir}}/amis.json"
    }
  ]
}
