{
  "variables": {
    "base_image_name": ""
  },
  "builders": [
    {
      "name": "consul",
      "type": "googlecompute",
      "zone": "us-central1-a",
      "source_image": "{{user `base_image_name`}}",
      "project_id": "{{user `googlecompute_project_id`}}",
      "account_file": "{{user `googlecompute_project_id`}}.json",
      "ssh_username": "ubuntu",
      "image_name": "nebula-ubuntu-consul-{{timestamp}}",
      "image_description": "Consul image."
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/files",
      "destination": "/tmp/provision"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/install.bash"
      ]
    }
  ]
}
