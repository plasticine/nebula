{
  "variables": {
    "packer-ap-southeast-2-base": ""
  },
  "builders": [
    {
      "name": "consul",
      "type": "amazon-ebs",
      "region": "ap-southeast-2",
      "source_ami": "{{user `packer-ap-southeast-2-base`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "ap-southeast-2-ubuntu-consul-{{isotime | clean_ami_name}}",
      "ami_description": "Consul image."
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "{{template_dir}}/files",
      "destination": "/tmp/provision"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/install.bash"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "tfvars",
      "output": "{{template_dir}}/amis.json"
    }
  ]
}
