{
  "builders": [
    {
      "name": "base",
      "type": "amazon-ebs",
      "region": "ap-southeast-2",
      "source_ami": "ami-a5416cc6",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "ap-southeast-2-ubuntu-base-{{isotime | clean_ami_name}}",
      "ami_description": "A Base Docker image."
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/base.bash",
        "{{template_dir}}/scripts/reboot.bash"
      ]
    },
    {
      "type": "file",
      "source": "{{template_dir}}/files",
      "destination": "/tmp/provision"
    },
    {
      "type": "shell",
      "scripts": [
        "{{template_dir}}/scripts/network-environment.bash",
        "{{template_dir}}/scripts/docker.bash"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "tfvars",
      "output": "{{template_dir}}/amis.json"
    }
  ]
}
