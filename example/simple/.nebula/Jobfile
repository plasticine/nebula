job "simple-example" {
    type = "service"
    datacenters = ["dc1"]

    update {
        stagger = "30s"
        max_parallel = 1
    }

    group "web" {
        count = 1

        task "http-in" {
            driver = "docker"
            config {
                image = "tutum/hello-world"
                port_map {
                    http = 80
                    https = 443
                }
            }
            service {
                port = "http"
                tags = ["http", "nebula-entrypoint"]
                check {
                    type = "http"
                    path = "/"
                    interval = "10s"
                    timeout = "2s"
                }
            }
            resources {
                cpu = 256
                memory = 128
                network {
                    mbits = 1
                    port "http" {}
                    port "https" {}
                }
            }
        }
    }
}
